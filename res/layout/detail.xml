<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <LinearLayout
        android:id="@+id/Linear_above_toHome"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#F73809"
        android:clickable="true" >

        <TextView
            android:id="@+id/imageview_above_menu_teacher"
            style="@style/title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_above_title_teacher"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注意事项"
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/right"
            style="@style/title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:textColor="#23ae9c"
            android:textSize="18dp"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/Linear_above_toHome"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/linerylayout_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                
                android:text="模式一：只打开通知开关，可以做到和小米魅族的红包助手一样，来红包时秒开聊天界面，然后手动拆红包"
                android:textColor="#F73809"
                android:textSize="18sp" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="模式二：只打开辅助功能，极限拆红包模式"
                android:textColor="#F73809"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="***	完成后，按下HOME键，让本应用保持在后台运行，如手机重启需要重新打开此应用"
                android:textColor="#F73809"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="***	关闭锁屏密码，手机锁屏后仍自动抢红包"
                android:textColor="#F73809"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="***	必须关闭免打扰，PC端登录的话也要关闭免打扰"
                android:textColor="#F73809"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/label_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="###	本应用目前只支持微信，且在当前聊天界面时不会抢红包"
                android:textColor="#F73809"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />

            <TextView
                android:id="@+id/label_text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="left"
                android:text="###	微信严禁自动拆红包软件，禁止外传，使用中一切后果自负"
                android:textColor="#F73809"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>